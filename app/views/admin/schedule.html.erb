<div class='header'>
  <p class='text_adm'>Администратор расписания</p>
  <%= link_to 'На главную', admin_index_path, method: :get, class: 'go_back' %>
</div>

<div class='container'>
	<div id='classes'>
		<table class='table table-borderless text-center'>
			<thead>
				<tr>
					<% 11.times do |ind| %>			<!-- разбитие информации созданного расписания на таблицу по классам -->
						<th><%= ind + 1 %></th>
					<% end %>
				</tr>
			</thead>
			<tbody>
			  <% @classes.each do |array| %>
				  <tr>
						<% 11.times do |t| %>
              <% name = array.grep(/^[#{t + 1}]/) %>
						  <% unless name.empty? %>
								<td><%= link_to name[0],
										  admin_update_class_path(class_id: name[0]) %></td>
							<% else %>
							  <td></td>
							<% end %>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class='text-center'>
	  <div class='row' style='padding-bottom: 10px'>
  	  	<%= link_to "Добавить класс", admin_new_schedule_path %>
	  </div>
	  <div class='row'>
	  	<%= link_to "Удалить все расписание", admin_destroy_all_schedules_path, method: :delete %>
	  </div>
	</div>

	<div class="message text-center" style='margin: 20px; color: red'>
	  <%= @message %>
	</div>
</div>